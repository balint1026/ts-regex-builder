{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    "module": "ESNext",
    "moduleResolution": "bundler",

    "target": "ES2020",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
